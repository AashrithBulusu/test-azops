{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "input": {
      "value": {
        "kind": "policydefinitions",
        "location": "global",
        "name": "e7e66e16-b9d0-4294-af23-bd21a0a4c633",
        "properties": {
          "description": "Deny Key Vault creation without RBAC permission enabled",
          "displayName": "Deny Key Vault creation without RBAC permission enabled",
          "metadata": {},
          "mode": "Indexed",
          "parameters": {
            "effect": {
              "allowedValues": [
                "Audit",
                "Deny",
                "Disabled"
              ],
              "defaultValue": "Deny",
              "metadata": {
                "description": "Enable or disable the execution of the policy",
                "displayName": "Effect"
              },
              "type": "String"
            }
          },
          "policyRule": {
            "if": {
              "allOf": [
                {
                  "equals": "Microsoft.KeyVault/vaults",
                  "field": "type"
                },
                {
                  "not": {
                    "equals": "recover",
                    "field": "Microsoft.KeyVault/vaults/createMode"
                  }
                },
                {
                  "anyOf": [
                    {
                      "exists": "false",
                      "field": "Microsoft.KeyVault/vaults/enableRbacAuthorization"
                    },
                    {
                      "equals": "false",
                      "field": "Microsoft.KeyVault/vaults/enableRbacAuthorization"
                    }
                  ]
                }
              ]
            },
            "then": {
              "effect": "[parameters('effect')]"
            }
          },
          "version": "1.0.0",
          "versions": [
            "1.0.0"
          ]
        },
        "type": "Microsoft.Authorization/policyDefinitions"
      }
    }
  }
}
